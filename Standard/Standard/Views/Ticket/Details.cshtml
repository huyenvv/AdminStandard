@model Ticket
@using WebLib.DAL
@{
    var currentUser = fwUserDAL.GetCurrentUser();
    var createby = new fwUserDAL().GetByID(Model.CreatedBy);
    var listTickKet = Model.TicketDetails;
    var dept = DB.Entities.Dept.FirstOrDefault(m=>m.ID==Model.DeptID);
    var listType = new[] { "", "", "", "" };
    listType[Model.Type] = "checked='checked'";
    ViewBag.Title = "ĐỀ NGHỊ DỤNG CỤ LÀM VIỆC/ REQUEST FOR WORKING FACILITIES";
}
<link href="~/Content/css/ticket.css" rel="stylesheet" />
@section  scripts{
    <script src="~/Content/js/ticket.js"></script>
}


@using (Html.BeginForm(null, null, new { returnUrl = Request.QueryString["returnUrl"] }, FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.Hidden("isSend", true)
    @Html.HiddenFor(m => m.ID)

    @Html.ValidationSummary(true)
    <div class="col-sm-12">
        <button type="submit" class="btn btn-primary" onclick="return CheckTicket(false);">Lưu lại</button>
        <button type="submit" class="btn btn-primary" onclick="return CheckTicket(true);">Gửi đề nghị</button>
        <a href="@Request.QueryString["returnUrl"]" class="btn btn-default">Hủy</a>
    </div>
    <br />
    <br />
    <br />
    <div class="col-sm-12">
        <label class="checkbox checkbox-inline m-r-20">
            <input type="checkbox" class="inlineCheckbox1" name="Type" value="1" @(listType[1]) disabled>
            <i class="input-helper"></i>
            (1) Mua <br /><i>Purchase</i>
        </label>
        <label class="checkbox checkbox-inline m-r-20">
            <input type="checkbox" class="inlineCheckbox1" name="Type" value="2" @(listType[3]) disabled>
            <i class="input-helper"></i>
            (2) Thay thế<br /><i>Replacement</i>
        </label>
        <label class="checkbox checkbox-inline m-r-20">
            <input type="checkbox" class="inlineCheckbox1" name="Type" value="3" @(listType[3]) disabled>
            <i class="input-helper"></i>
            (3) Bảo trì, sửa chữa<br /><i>Maintenance/Repair</i>
        </label>
    </div>
    <br /><br />
    <br /><br />
    <br />
    <br />
    <div class="col-sm-4">
        <div class="form-group fg-float">
            <div class="fg-line">
                <label>Ngày đề nghị</label>
                <input type="text" name="NgayDenghi" value="@Model.Created.ToString("dd/MM/yyyy")" class=" form-control fg-input" readonly="readonly" />
            </div>

        </div>
    </div>
    <div class="col-sm-4">
        <div class="form-group fg-float">
            <div class="fg-line">
                <label>Người đề nghị</label>
                <input type="text" name="NguoiDeNghi" value="@createby.Name" class=" form-control fg-input" readonly="readonly" />
            </div>

        </div>
    </div>
    <div class="col-sm-4">
        <div class="form-group fg-float">
            <div class="fg-line">
                <label>Bộ phận</label>
                <input type="text" value="@dept.Title" class=" form-control fg-input" readonly="readonly" />
            </div>

        </div>
    </div>
    <div class="col-sm-12">
        <table class="table table-striped table-vmiddle @(listTickKet!=null && listTickKet.Count > 0 ? "" : "hide")">
            <thead>
                <tr>
                    <th>
                        TT<br />
                        <i>No</i>
                    </th>
                    <th>
                        Diễn giải <br />
                        <i>Description</i>
                    </th>
                    <th>
                        SL<br />
                        <i>Q'tty</i>
                    </th>
                    <th>
                        Mục đích, lý do<br />
                        <i>Perpose, Reason</i>
                    </th>
                    <th>
                        Ngày cần<br />
                        <i>Date require</i>
                    </th>
                    <th>

                    </th>

                </tr>
            </thead>
            <tbody>
                @if (listTickKet != null && listTickKet.Count > 0)
                {
                    var dem = 1;
                    foreach (var item in listTickKet)
                    {
                        <tr>
                            <td>
                                @(dem++)
                            </td>
                            <td>
                                @item.Title
                            </td>
                            <td>
                                @item.Quantity
                            </td>
                            <td>
                                @item.Reason
                            </td>
                            <td>
                                @item.DateRequire
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
        <br />
    </div>

    <br />
    <div id="frmChiTietYeuCau">
        <div class="col-sm-12">
            <div class="form-group fg-float">
                <div class="fg-line">
                    <label>
                        Ý kiến phản hôi
                    </label>
                    <textarea class="form-control fg-input" id="txtPhanHoi" rows="3" name="MucDich"></textarea>
                </div>

            </div>
        </div>
        <div class="col-sm-12">
            <div id="messerror" class="hide field-validation-error">Bạn cần nhập ý kiến phản hồi!</div>
        </div>
        <div class="clearfix"></div>
        <div class="col-sm-6">
            <button class="btn btn-default btn-icon-text waves-effect" id="PhanHoi"><i class="md md-arrow-back"></i>  Phản hồi</button>
        </div>

    </div>

}
