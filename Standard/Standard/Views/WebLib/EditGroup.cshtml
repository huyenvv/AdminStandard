@model WebLib.Models.fwGroup

@{
    ViewBag.Title = "Chỉnh sửa Group";
}

@using (Html.BeginForm("EditGroup", "WebLib", new { returnUrl = Request.QueryString["returnUrl"] }, FormMethod.Post))
{
    <div class="col-sm-6">
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.ID)

        <div class="form-group">
            <label>Tên nhóm <span class="color-red">*</span></label>
            <div class="fg-line">
                @Html.TextBoxFor(model => model.Title, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Title)
            </div>
        </div>
        <div class="form-group">
            <div>
                <button type="submit" class="btn btn-primary">Save</button>
                <a href="@Request.QueryString["returnUrl"]" class="btn btn-default">Hủy</a>
            </div>
        </div>
    </div>
}