@model List<Standard.Dept>
@using WebLib.DAL
@{
    ViewBag.Title = "Danh sách bộ phận";
    var gdal = new fwGroupDAL();
    var udal = new fwUserDAL();
}

<p>
    <a href="@Url.Action("Edit", new { returnUrl = Request.RawUrl })" class="btn btn-primary">Thêm bộ phận</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Tên phòng</th>
            <th>Liên kết nhóm</th>
            <th>Tên trưởng phòng</th>
</tr>
    </thead>
    @foreach (var item in Model)
    {
        var g = gdal.GetByID(item.GroupID);
        var u = item.LeaderUserID == null ? null : udal.GetByID(item.LeaderUserID.Value);
        <tr>
            <td>
                <a href="@Url.Action("Edit", new { id = item.ID, returnUrl = Request.RawUrl })">@item.Title</a>
            </td>
            <td>
                @if (g != null)
                {
                    <a href="@Url.Action("AddUserToGroup", "WebLib", new { groupID = g.ID, returnUrl = Request.RawUrl })">@g.Title</a>
                }
            </td>
            <td>
                @if (u != null)
                {
                    <a href="@Url.Action("EditUser", "WebLib", new { id = u.ID, returnUrl = Request.RawUrl })">@u.Name</a>
                }
            </td>
            <td>
                @Html.ActionLink("Delete", "Delete", new { id = item.ID, returnUrl = Request.RawUrl }, new { @class = "confirmDelete" })
            </td>
        </tr>
    }

</table>
